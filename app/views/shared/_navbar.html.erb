<div class="navbar fixed-top">
  <% if current_user %>
    <div class="left">
      <% if params[:controller] == 'protocols' && params[:action] == 'show' %>
        <%= link_to '', area_path(@protocol.area), class: 'fas fa-backward bigger-icon' %>
      <% elsif params[:controller] == 'areas' && params[:action] == 'show' %>
        <%= link_to '', areas_path, class: 'fas fa-backward bigger-icon'  %>
      <% elsif params[:controller] == 'tasks' && params[:action] == 'show' %>
        <%= link_to '', area_protocol_path(@task.protocol), class: 'fas fa-backward bigger-icon' %>
      <% else %>
        <%= link_to '', :back, class: 'fas fa-backward bigger-icon' %>
      <% end %>
    </div>
    <div class="center">
      <%= link_to "Light!", areas_path, class: "logo" %>
    </div>
    <div class="right">
      <%= link_to "", destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt bigger-icon' %>
    <% else %>
      <div class="logo">Light!</div>
      <%= link_to "", areas_path, class: 'fas fa-sign-in-alt bigger-icon' %>
    <% end %>
    </div>
</div>
