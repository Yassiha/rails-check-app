<div class="container">
  <div class="form">
    <%= simple_form_for @protocol, url: area_protocols_path, method: :post do |f| %>
      <h2>New mission</h2>
      <%= f.input :title, label: "Title:" %>
      <%= f.input :content, label: "Informations:", :input_html => { :rows => 7 , :style => 'width: 100%'} %>
      <%= f.input :members,
                    label: "Members",
                    placeholder:"Rosa, Stephan, .."%>
      <button type="button" class="btn btn-outline-primary">
        <%= f.button :submit, value: 'Create', "data-disable-with" => "Creating.." %>
      </button>
    <% end %>
  </div>

</div>
