<h1><%= @protocol.title %> <%= link_to "Edit", edit_protocol_path(@protocol), method: :get %> </h1>
<%= @protocol.content %> <br>
<%= link_to "Back", protocols_path %>

<hr>
<% @protocol.tasks.each do |task| %>
  <%= task.content %> <br>
  <%= task.check %> <br>
  <%= link_to "Edit", edit_protocol_task_path(task), method: :get %>
  <%= link_to "Delete", protocol_task_path(task), method: :delete, data: { confirm: 'Are you sure?', disable_with: 'loading...' } %>
  <br>  <hr>
<% end %>
<%= link_to "Add Task", new_protocol_task_path(@protocol)  %>

