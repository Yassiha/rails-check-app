<div class="navbar">
  <%= link_to "Back", area_path(@protocol.area), class:"logo" %>
  <div class="logo">light!</div>
</div>
<br>
<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <ul class="nav nav-pills card-header-pills">
        <li class="nav-item">
          <%= link_to "", new_area_protocol_task_path(@protocol, @protocol.area), class: 'nav-link far fa-plus-square bigger-icon'  %>
        </li>
        <li class="nav-item">
          <%= link_to "", edit_area_protocol_path(@protocol), method: :get, class: 'nav-link far fa-edit bigger-icon' %>
        </li>
        <li class="nav-item">
           <%= link_to "", area_protocol_path(@protocol, @protocol.area), method: :delete, data: { confirm: 'Are you sure?', disable_with: 'loading...' }, class: 'nav-link far fa-trash-alt bigger-icon' %></p>
        </li>
      </ul>
    </div>
    <div class="card-body">
      <h2 class="card-title fas fa-tasks">|<%= @protocol.title %></h4>
      <p class="card-text"><%= simple_format(@protocol.content) %></p>
      <br><hr>
      <h2 class="card-title fas fa-users">|Membres: </h4>
      <p class="card-text"><%= simple_format(@protocol.members) %></p>
    </div>
  </div>
    <br>
    <% @protocol.tasks.each do |task| %>
    <div class="card-product">
      <div class="card-product-infos">
        <h2><span class="fas fa-thumbtack"></span>   <%= link_to task.title, area_protocol_task_path(task, task.protocol) %></h2>
        <p><%= simple_form_for task, url: area_protocol_task_path(task, task.protocol), method: :patch do |f| %>
        <% checkbox =
            if task.checkbox
              "Done"
            else
              "To do"
            end %>
        <%= f.input :checkbox, label: checkbox %></p>
        <%= f.button :submit, value: 'Check', "data-disable-with" => "Updating..", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
    <br>
    <% end %>
</div>
