<ul class="list-group" style="margin: 8px">
  <h1><%= @protocol.title %> |  <%= link_to "Back", area_path(@protocol.area) %></h1>
  <p><%= @protocol.content %></p>
  <p><%= link_to "Edit Protocol", edit_area_protocol_path(@protocol), method: :get %></p>
  <% @protocol.tasks.each do |task| %>
  <li class="list-group-item">
    <%= task.content %> <br>
    <%= task.check %> <br>
    <%= link_to "Edit", edit_area_protocol_task_path(task, task.protocol, task.protocol.area), method: :get %>
    <%= link_to "Delete", area_protocol_task_path(task, task.protocol, task.protocol.area), method: :delete,
                                                    data: { confirm: 'Are you sure?',
                                                    disable_with: 'deleting...' } %>
  </li>
  <% end %>
  <li class="list-group-item">
    <%= link_to "Add Task", new_area_protocol_task_path(@protocol, @protocol.area) %>
  </li>

  <li class="list-group-item">
    <h2>Feedbacks</h2>
  </li>
  <li class="list-group-item">
    <% @feedbacks.each do |feedback| %>
      <h3>Concerne: <%= "#{feedback.area.title} |  #{feedback.protocol.title} | #{feedback.task.content} "%></h3>
      <%= feedback.title  %> <br>
      <%= feedback.content  %>
    <% end %>
  </li>
</ul>
