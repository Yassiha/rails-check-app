<div class="container">
  <div class="form">
    <%= simple_form_for @user, url: area_area_users_path, method: :post do |f| %>
      <h2>New Member</h2>
      <%= f.input :email, label: "Email:" %>
      <button type="button" class="btn btn-outline-primary">
        <%= f.button :submit, value: 'Create', "data-disable-with" => "Creating.." %>
      </button>
    <% end %>
  </div>

</div>
